<%- include partials/header.ejs %>

  <section id="header" class="py-5 bg-dark text-light text-center">
    <div class="container">
      <h1>Todo App</h1>
      <h3 class="mb-0">Organize your life!</h3>
    </div>
  </section>

  <section id="form" class="py-5 bg-light text-light">
    <div class="container">
      <div class="row">

        <div class="col-md-6 mx-auto">
          <form id="addTodo" method="post" action="/todo/add">
            <div class="form-group">
              <input type="text" class="form-control form-control-lg" name="todoText" id="todoText" placeholder="Todo Name">
            </div>
            <div class="form-group">
              <textarea class="form-control form-control-lg" name="todoBody" id="todoBody" rows="3" placeholder="What would you like todo?"></textarea>
            </div>
            <button class="btn btn-outline-success btn-lg btn-block" type="submit">Add Todo</button>
          </form>
        </div>

      </div>
    </div>
  </section>

  <section id="todos" class="py-5 text-center">
    <div class="container">
      <div class="row">

        <div class="col-md-6 mx-auto">
          <ul class="list-group">
            <% todos.forEach((todo) => { %>
              <li class="list-group-item d-flex">
                <%= todo.text %> - <%= todo.body %><a data-id="<%= todo._id %>" href="#" class="btn btn-danger btn-sm ml-auto text-light delete-todo">Delete</a>
              </li>
            <% }); %>
          </ul>
        </div>

      </div>
    </div>
  </section>
  

  
  
<%- include partials/footer.ejs %>
