<%- include partials/header.ejs %>

  <section id="header" class="py-5 bg-dark text-light text-center">
    <div class="container">
      <h1>Todo App</h1>
      <h3 class="mb-0">Organize your life!</h3>
    </div>
  </section>

  <section id="form" class="py-5 bg-light text-light">
    <div class="container">
      <div class="row">

        <div class="col-md-6 mx-auto">
          <form id="addTodo" method="post" action="/todo/add">
            <div class="form-group">
              <input type="text" class="form-control form-control-lg" name="todoText" id="todoText" placeholder="Name your todo.">
            </div>
            <div class="form-group">
              <input type="text" class="form-control form-control-lg" name="todoBody" id="todoBody" placeholder="What would you like todo?">
            </div>
            <button class="btn btn-outline-success btn-lg btn-block" type="submit">Add Todo</button>
          </form>
        </div>

      </div>
    </div>
  </section>

  <section id="todos" class="py-5 text-center">
    <div class="container">
      <div class="row">

        <div class="col-md-6 mx-auto">
          <% todos.forEach((todo) => { %>
            <p><%= todo.text %> - <%= todo.body %></p>
          <% }); %>
        </div>

      </div>
    </div>
  </section>
  

  
  
<%- include partials/footer.ejs %>
