<%- include partials/header.ejs %>

<section id="header" class="py-5 bg-dark text-light text-center">
  <div class="container">
    <h1>Todo App</h1>
    <h3 class="mb-0">Organize your life!</h3>
  </div>
</section>

<section id="form" class="py-5 bg-light text-light">
  <div class="container">
    <div class="row">

      <div class="col-md-6 mx-auto">
        <form id="editTodo" method="post" action="/todo/edit/<%= todo._id %>">
          <div class="form-group">
            <input type="text" class="form-control form-control-lg" name="todoText" id="todoText" value="<%= todo.text %>">
          </div>
          <div class="form-group">
            <textarea class="form-control form-control-lg" name="todoBody" id="todoBody" rows="3"><%= todo.body %></textarea>
          </div>
          <div class="d-flex">
            <button class="btn btn-outline-success btn-lg" type="submit">Edit Todo</button>
            <a href="/" class="btn btn-outline-primary btn-lg ml-auto">Cancel</a>
          </div>
        </form>
      </div>

    </div>
  </div>
</section>

<%- include partials/footer.ejs %>